{

  "manifest_version": 2,
  "name": "Batsu",
  "version": "1.0",
  
  "browser_action": {
    "browser_style": false,
    "default_popup": "popup.html",
    "default_title": "Batsu"
},

  "description": "Website that forces you to do a batsu game where you do one pushup or one situp after {event} happens",

  "icons": {
    "48": "icons/border-48.png"
  },


	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["options.js"],
      "run_at": "document_start"
    }
  ] 


}