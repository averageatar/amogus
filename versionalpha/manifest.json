{

    "manifest_version": 2,
    "name": "hentaiblocker",
    "version":"1.0",

    "browser_action": {
        "browser_style": false,
        "default_popup": "popup.html",
        "default_title": "Batsu"
},

    "description": "Test program to block certain websites",

    "icons": {
      "48": "icons/border-48.png"
    },

    "options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

    "content_scripts": [
        {
        "matches": ["*://nhentai.net/*"],
        "js": ["hentaiblocker.js"]
        }
    ],

    "background": {
      "scripts": ["background.js"]
    },

    "permissions": [
      "<all_urls>", "webRequest", "webRequestBlocking", "storage", "tabs", "idle"
  ]

}
